@*
    Show all quizes
*@

@model List<FastestQuiz.Models.Quiz>
<body>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Quiz Name</th>
                <th scope="col">Description</th>
                <th scope="col">Created by</th>
                <th scope="col">Date</th>
                <th scope="col">Last Update</th>
                <th scope="col">Operations</th>

            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td scope="row">@i</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Description</td>
                    <td>@Model[i].Author</td>
                    <th>@Model[i].Date</th>
                    <th>@Model[i].LastUpdate</th>
                    <th>
                        <a asp-action="Details" asp-route-id="@Model[i].Id" title="Visualizar">
                            <i class="bi bi-eye"></i> 
                        </a>

                        <a>
                            <i class="bi bi-pencil-square mx-3"></i> 
                       </a>

                        <a>
                            <i class="bi bi-trash3"></i>
                       </a>
                    </th>
                </tr>
            }
        </tbody>
    </table>

</body>